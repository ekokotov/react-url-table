{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "lib": ["es2015","dom"],
    "importHelpers": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "preserveConstEnums": true
  },
  "files": ["src/index.tsx"],
  "exclude": ["node_modules",
    "tests/**", "./stories", "./.storybook"]
}
